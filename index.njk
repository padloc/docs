---
layout: layouts/base.njk
title: Home
icon: books
---

<style>
    @supports (-webkit-text-stroke: 1px var(--orange)) {
        html,
        body {
            height: 100%;
        }

        .section {
            border: dashed var(--color-shade-2) 1px;
            transition: all 0.3s;
            padding: 1em;
            border-radius: 0.5em;
        }

        .section:hover {
            border: solid 1px var(--orange);
            box-shadow: var(--orange) 1px 1px 0 0, var(--purple) 2px 2px 0 1px, var(--blue) 4px 4px 0 1px,
                var(--green) 6px 6px 0 1px;
            transform: scale(1.02);
        }

        .section > * {
            transition: all 0.3s;
        }

        .section > .title {
            display: block;
            margin: 0.5em;
            text-align: center;
            font-size: var(--font-size-huge);
            font-weight: bold;
            -webkit-text-stroke: 1px var(--orange);
            -webkit-text-fill-color: white;
            text-shadow: var(--orange) 0px 0px, var(--purple) 0px 0px, var(--blue) 0px 0px, var(--green) 0px 0px;
        }

        .section:hover > .title {
            text-shadow: var(--orange) 1px 1px, var(--purple) 2px 2px, var(--blue) 3px 3px, var(--green) 4px 4px;
        }

        .section > .section-items {
            --grid-column-width: 20em;
            max-width: 41em;
            margin: 0 auto;
        }

        .sections {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(20em, 1fr));
            width: 100%;
            max-width: 50em;
            grid-gap: 1em;
        }

        .logo {
            height: 4em;
        }

        .logo-subtitle {
            margin: -0.5em 0 2em 0;
            opacity: 0.8;
            font-weight: 600;
        }

        .search-wrapper {
            border: solid 1px var(--color-shade-2);
            padding: 0.25em;
            border-radius: 0.5em;
        }

        .search-wrapper:focus-within {
            border-color: var(--color-highlight);
        }
    }
</style>

{% macro renderSection(url, title, icon, description) -%}<!-- -->

{% set children = collections.all | eleventyNavigation(url) %}<!-- -->

<div class="section fill">
    <a href="{{ url }}" class="unstyled title"><i class="{{ icon }}"></i> {{ title }}</a>
    <div class="double-margined text-centering">
        {{ description }}
    </div>
    <ul class="unstyled section-items spacing grid">
        {% for item in children %}
        <li class="half-margined">
            <a href="{{ item.url }}">
                <i class="{{ item.icon }}"></i>
                {{ item.title }}
            </a>
        </li>
        {% endfor %}
    </ul>
</div>
{%- endmacro %}

<main class="double-padded centering vertical layout fill-vertically">
    <div class="double-spacing horizontal sections animation-reveal-children">
        <header class="margined centering vertical layout" style="grid-column: -1/1">
            <img src="assets/img/logo-light.svg" class="logo" />
            <div class="logo-subtitle">Docs & Resources</div>
            <form action="https://google.com/search" method="get" class="search-wrapper">
                <input type="hidden" name="q" value="site:{{ metadata.url }}" />
                <i class="search horizontally-margined"></i>
                <input class="unstyled" type="search" name="q" autocomplete="off" required placeholder="Search..." />
                <button type="submit"><i class="arrow-right"></i></button>
            </form>
        </header>
        <div>
            {{ renderSection("/manual", "User Manual", "book", "You just want to learn how to use the Padloc app.") }}
        </div>
        <div>
            {{
                renderSection(
                    "/docs",
                    "Technical Docs",
                    "code",
                    "You'd like to contribute to the project or host Padloc yourself."
                )
            }}
        </div>
    </div>
</main>

<footer></footer>
